<?xml version="1.0"?>
<configuration>
	<configSections>
		<section name="NHaml" type="NHaml.Core.Configuration.NHamlConfigurationSection, System.Web.NHaml.Core"/>
	</configSections>
	<NHaml autoRecompile="true" outputDebugFiles="true">
		<assemblies>
			<add assembly="NHaml.Samples.Mvc.CSharp"/>
		</assemblies>
		<imports>
			<add import="NHaml.Web.Mvc3"/>
      <add import="NHaml.Samples.Mvc.CSharp.Controllers"/>
		</imports>
	</NHaml>
	<appSettings/>
	<connectionStrings>
		<add name="NorthwindConnectionString" connectionString="Data Source=|DataDirectory|\Northwind.sdf;Persist Security Info=False;" providerName="System.Data.SqlClient"/>
	</connectionStrings>
	<system.web>
		<compilation debug="true" targetFramework="4.0">
			<assemblies>
				<add assembly="System.Data.Linq, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B77A5C561934E089"/></assemblies></compilation>
		<authentication mode="Windows"/>
		<pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/></system.web>
</configuration>
